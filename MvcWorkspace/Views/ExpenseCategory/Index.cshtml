@model IEnumerable<MvcWorkspace.Models.ExpenseCategory>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Expense Categories</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="ExpenseCategory" asp-action="AddOrEdit" class="btn btn-primary">Create New Expense Category</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered w-100">
            <thead>
                <tr class="align-middle text-primary">
                    <th>
                        Category Name
                    </th>
                    <th>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var expenseCat in Model)
                {
                    <tr class="align-middle">
                        <td width="65%">@expenseCat.CategoryName</td>
                        <td width="35%" class="">
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="ExpenseCategory" asp-action="AddOrEdit" asp-route-Id="@expenseCat.Id" class="btn btn-outline-primary mx-2">Update</a>
                                <a asp-controller="ExpenseCategory" asp-action="Delete" asp-route-Id="@expenseCat.Id" class="btn btn-outline-danger mx-2">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No categories created yet</p>
    }

</div>

